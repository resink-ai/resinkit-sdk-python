{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: AI Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/resinkit/ai/agent.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "HTTP MCP Example - Workflow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/http_mcp_example.py",
            "args": [
                "--example",
                "2"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}